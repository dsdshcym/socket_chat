#!/usr/bin/env ruby

require "socket_chat/server"
require "optparse"

address = "localhost"
port   = 8000

OptionParser.new do |opts|
  opts.banner = "Usage: socket_chat_server [options]"

  opts.on("-s", "--server [SERVER]", "Server's IP address (Default: localhost)") do |s|
    address = s
  end

  opts.on("-p", "--port [PORT]", "Server's port (Default: 8000)") do |p|
    port = p.to_i
  end

  opts.on("-h", "--help", "Print this help") do
    puts opts
    exit
  end
end.parse!

server = Server.new()
server.build_server(address, port)
server.run
